<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chkDia"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lunes"
            android:id="@+id/txtDia" android:textSize="36dp" android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/chkDia"
            android:paddingLeft="10dp"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Entrada:"
            android:id="@+id/txtEntrada"
            android:layout_alignLeft="@+id/txtDia"
            android:layout_below="@id/txtDia"
            android:paddingLeft="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/txtHoraIn"
            android:text="07:00"
            android:layout_alignBottom="@id/txtEntrada"
            android:layout_toRightOf="@id/txtEntrada"
            android:paddingRight="10dp" android:background="@color/hielo"
            android:textAppearance="?android:attr/textAppearanceLarge" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Salida: "
            android:id="@+id/txtSalida"
            android:layout_alignBottom="@+id/txtHoraOut"
            android:layout_alignLeft="@+id/txtDia"
            android:paddingLeft="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/txtHoraOut"
            android:text="08:00" android:layout_below="@+id/txtHoraIn"
            android:layout_toRightOf="@id/txtEntrada"
            android:paddingRight="10dp" android:background="@color/hielo"
            android:textAppearance="?android:attr/textAppearanceLarge" android:textStyle="bold"/>
</RelativeLayout>